<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="FalconProgrammer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FalconProgrammer.Views"
    FlyoutBehavior="Disabled"
    Width="1155"
    Title="Falcon Programmer">
    
    <Shell.TitleView>
        <HorizontalStackLayout>
            <Image Source="falcon_svg_repo_com.png"
                   HeightRequest="50"/>
            <Label x:Name="NavigationLabel"
                   Text="Test"
                   Margin="10,0"
                   VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <TabBar>
        <ShellContent
            Title="Locations"
            ContentTemplate="{DataTemplate views:LocationsPage}" />

        <ShellContent
            Title="Script Processor"
            ContentTemplate="{DataTemplate views:ScriptProcessorPage}" />

        <ShellContent
            Title="Batch Script"
            ContentTemplate="{DataTemplate views:BatchScriptPage}" />
    </TabBar>

</Shell>