<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ct="using:FalconProgrammer.Controls"
             xmlns:vm="using:FalconProgrammer.ViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FalconProgrammer.Views.MidiForMacrosView"
             x:DataType="vm:MidiForMacrosViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE -->
        <vm:MidiForMacrosViewModel />
    </Design.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" 
                    Height="35" Margin="10, 10, 0, 0">
            <Label Target="ReplacementTextBox"
                   Margin="0, 0, 5, 0">
                <AccessText Text="_Modulation Wheel Replacement CC No."
                            ShowAccessKey="True" />
            </Label>
            <TextBox x:Name="ReplacementTextBox" 
                     Text="{Binding ModWheelReplacementCcNo}"
                     TextAlignment="End"
                     MinWidth="10"
                     Width="40" />
        </StackPanel>
    <DataGrid
        ItemsSource="{Binding ContinuousCcNoRanges}"
        RowHeight="30"
        GridLinesVisibility="All"
        Margin="0, 10, 0, 0">
        <DataGrid.Columns>
            <DataGridTemplateColumn Width="90">
                <DataGridTemplateColumn.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Start"
                                   FontSize="16"
                                   TextAlignment="Center" />
                    </DataTemplate>
                </DataGridTemplateColumn.HeaderTemplate>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate DataType="vm:CcNoRangeViewModel">
                        <TextBox Text="{Binding Start}"
                                 TextAlignment="End"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Width="90">
                <DataGridTemplateColumn.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="End"
                                   FontSize="16"
                                   TextAlignment="Center" />
                    </DataTemplate>
                </DataGridTemplateColumn.HeaderTemplate>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate DataType="vm:CcNoRangeViewModel">
                        <TextBox Text="{Binding End}"
                                 TextAlignment="End" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Width="105">
                <DataGridTemplateColumn.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Action"
                                   FontSize="16"
                                   Margin="9,0,0,0" />
                    </DataTemplate>
                </DataGridTemplateColumn.HeaderTemplate>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate DataType="vm:CcNoRangeViewModel">
                        <ct:ItemActionButton
                            CutCommand="{Binding CutCommand}"
                            PasteBeforeCommand="{Binding PasteBeforeCommand}"
                            RemoveCommand="{Binding RemoveCommand}"
                            Margin="0, 0, 0, 0" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
    </DockPanel>
</UserControl>