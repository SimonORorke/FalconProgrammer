<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ct="using:FalconProgrammer.Controls"
             xmlns:vm="using:FalconProgrammer.ViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FalconProgrammer.Views.MidiForMacrosView"
             x:DataType="vm:MidiForMacrosViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE -->
        <vm:MidiForMacrosViewModel />
    </Design.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                    Height="35" Margin="10, 10, 0, 0">
            <Label Target="ReplacementTextBox"
                   Margin="0, 0, 5, 0">
                <AccessText Text="_Modulation Wheel Replacement CC No."
                            ShowAccessKey="True" />
            </Label>
            <TextBox x:Name="ReplacementTextBox"
                     Text="{Binding ModWheelReplacementCcNo}"
                     TextAlignment="End"
                     Height="30"
                     MinWidth="10"
                     Width="40" />
        </StackPanel>
        <Grid RowDefinitions="30, *" ColumnDefinitions="Auto, 10, Auto"
              Margin="0,10,0,0">
            <Label Grid.Column="0" Grid.Row="0"
                   Target="ContinuousDataGrid">
                <AccessText Text="_Continuous CC Number Ranges"
                            TextAlignment="Center"
                            ShowAccessKey="True" />
            </Label>
            <DataGrid
                Grid.Column="0" Grid.Row="1"
                x:Name="ContinuousDataGrid"
                ItemsSource="{Binding ContinuousCcNoRanges}"
                RowHeight="30"
                GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="81">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <!-- Why is there a big right margin in these header TextBlocks? -->
                                <TextBlock Text="Start"
                                           FontSize="16"
                                           HorizontalAlignment="Right"
                                           TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Start}"
                                         TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="81">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="End"
                                           FontSize="16"
                                           TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding End}"
                                         TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="101">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Action"
                                           FontSize="16"
                                           Margin="9,0,0,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="vm:CcNoRangeViewModel">
                                <ct:ItemActionButton
                                    CutCommand="{Binding CutCommand}"
                                    PasteBeforeCommand="{Binding PasteBeforeCommand}"
                                    RemoveCommand="{Binding RemoveCommand}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Label Grid.Column="2" Grid.Row="0"
                   Target="ToggleDataGrid">
                <AccessText Text="_Toggle CC Number Ranges"
                            TextAlignment="Center"
                            ShowAccessKey="True" />
            </Label>
            <DataGrid
                Grid.Column="2" Grid.Row="1"
                x:Name="ToggleDataGrid"
                ItemsSource="{Binding ToggleCcNoRanges}"
                RowHeight="30"
                GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="81">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <!-- Why is there a big right margin in these header TextBlocks? -->
                                <TextBlock Text="Start"
                                           FontSize="16"
                                           HorizontalAlignment="Right"
                                           TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Start}"
                                         TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="81">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="End"
                                           FontSize="16"
                                           TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding End}"
                                         TextAlignment="End" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="101">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Action"
                                           FontSize="16"
                                           Margin="9,0,0,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="vm:CcNoRangeViewModel">
                                <ct:ItemActionButton
                                    CutCommand="{Binding CutCommand}"
                                    PasteBeforeCommand="{Binding PasteBeforeCommand}"
                                    RemoveCommand="{Binding RemoveCommand}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>